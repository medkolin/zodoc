@model IEnumerable<string>
@{
var Tags = Model;

}

    @if (Tags != null)
    {
        <div class="tags">
            @{
                var isFirst = true;
            }
            @foreach (string tag in Tags)
            {
                IDocument tagDocument = Documents[Blog.Tags].FirstOrDefault(x => x.String(BlogKeys.Tag) == tag && x.Get<int>(Keys.CurrentPage) == 1);
                if(tagDocument != null)
                {      
                string buttonTechnology = isFirst ? "btn-technology" : "";isFirst = false;
                <a role="button" href="@Context.GetLink(tagDocument)" class="btn btn-default btn-xs @buttonTechnology">@tag</a>
                }
            }
        </div>     
    } 
              